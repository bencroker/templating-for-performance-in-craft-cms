{% extends '_layout' %}
{% set notes = [
    'Use correct element query methods (fix deprecated code).',
] %}

{% set limit = craft.app.request.getParam('limit') ?? 10 %}
{% set entryQuery = craft.entries
    .section('articles')
    .orderBy('order asc')
    .limit(limit)
%}
{% set entries = entryQuery.all() %}


{% block content %}

    {% if entries|length %}
        <ul>
            {% for entry in entries %}
                <li>
                    {{ entry.title }}
                    {{ entry.relatedEntries.count() ? '→' }}
                    {% for relatedEntry in entry.relatedEntries.all() %}
                        {{ relatedEntry.title }}
                        {{- not loop.last ? ',' }}
                    {% endfor %}
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    <p>
        <small>
            Showing {{ entries|length }} of {{ entryQuery.count() }}.
        </small>
    </p>

{% endblock %}


