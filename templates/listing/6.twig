{% extends '_layout' %}
{% set notes = [
    'Memoize `relatedEntries`.',
    'Remove `.count()`.',
] %}

{% set entryQuery = craft.entries.section('articles').orderBy('order asc').limit(10) %}
{% set entries = entryQuery.all() %}


{% block content %}

    {% if entries|length %}
        <ul>
            {% for entry in entries %}
                {% set relatedEntries = entry.relatedEntries.all() %}
                <li>
                    {{ entry.title }}
                    {% if relatedEntries|length %}
                        : is related to
                        {% for relatedEntry in relatedEntries %}
                            {{ relatedEntry.title }}
                            {{- not loop.last ? ',' }}
                        {% endfor %}
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    {% endif %}

{% endblock %}
