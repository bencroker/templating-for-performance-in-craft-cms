{% extends '_layout' %}
{% set notes = [
    'Get crazy with inception (poorly).',
] %}

{% set limit = craft.app.request.getParam('limit') ?? 10 %}
{% set entryQuery = craft.entries
    .section('articles')
    .orderBy('order asc')
    .limit(limit)
%}
{% set entries = entryQuery.all() %}


{% block content %}

    {% if entries|length %}
        <ul>
            {% for entry in entries %}
                <li>
                    {{ entry.title }}
                    {{ entry.relatedEntries|length ? '→' }}
                    {% for relatedEntry in entry.relatedEntries.all() %}
                        {{ relatedEntry.id }} [
                        {%- for deeplyRelatedEntry in relatedEntry.relatedEntries.all() -%}
                            {{ deeplyRelatedEntry.id }}
                            {{- not loop.last ? ',' }}
                        {%- endfor -%}
                        ]{{ not loop.last ? ',' }}
                    {% endfor %}
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    <p>
        <small>
            Showing {{ entries|length }} of {{ entryQuery.count() }}.
        </small>
    </p>

{% endblock %}


